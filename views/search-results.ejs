<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Search-results</title>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet" />
   <style>
*{
   margin: 0;
   padding: 0;
   box-sizing: border-box;
   font-family: Arial, sans-serif;
}
html,body{
    width: 100%;
    height: 100%;
}
body {
  font-family: Arial, sans-serif;
  background-color: #111;
  color: #fff;
}
h1{
  margin-top: 30px;
}
.movie-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  padding: 20px;
}

.movie-card {
  width: 200px;
  height: 370px;
  background-color: #111;
  color: white;
  text-align: center;
  padding: 10px;
  border-radius: 5px;
  border: 1px solid #fff;
}

.movie-card img {
  width: 100%;
  height: 250px;
  border-radius: 5px;
}
.movie-card h3{
  font-size: 20px;
}
.movie-card p{
  margin-top: 5px;
  margin-bottom: 20px;
  color: #aaa;
}
.btn-a{
  border-radius: 5px;
  padding: 10px;
  text-decoration: none;
  color: #fff;
  background-color: red;
  transition: background-color 0.2s;
}
.btn-a:hover{
  background-color: #8c1010;
}     
   </style>
</head>
<body>

<h1>Search Results for "<%= query %>"</h1>

<div class="movie-grid">
<% if (movies.length > 0) { %>
    <% movies.forEach(movie => { %>
      <div class="movie-card">
          <img src="<%= movie.imageurl %>" alt="<%= movie.moviename %>">
          <h3><%= movie.moviename %></h3>
          <p><%= movie.date %></p>
          <a class="btn-a" href="/movie/<%= movie._id %>">View Details</a>
        </div>
    <% }) %>
<% } else { %>
  <p>No movies found matching your search.</p>
<% } %>
</div>
</body>
</html>
